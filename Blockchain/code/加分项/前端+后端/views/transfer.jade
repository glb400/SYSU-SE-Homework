extends layout

block content
    link(rel='stylesheet', href='/stylesheets/normal.css')
    fieldset
        legend transfer
            label(for='params') params
            form(id='params' method='post')
                div
                    div.user
                    label(for='user') user
                    input(id='user', name='user', value='user')
                    span.error

                div
                    div.debtorA
                    label(for='debtorA') debtorA
                    input(id='debtorA', name='debtorA', value='0x0')
                    span.error

                div
                    div.debtorB
                    label(for='debtorB') debtorB
                    input(id='debtorB', name='debtorB', value='0x0')
                    span.error

                div.buttons
                    input.button.reset(type='button', value='清除')
                    input.button.submit(type='submit', value='提交')
